{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@libmedia/common/*": [
        "node_modules/@libmedia/common/dist/esm/*"
      ],
      "@libmedia/cheap/*": [
        "node_modules/@libmedia/cheap/dist/esm/*"
      ],
      "@libmedia/avcodec/*": [
        "node_modules/@libmedia/avcodec/dist/esm/*"
      ],
      "@libmedia/avformat/*": [
        "node_modules/@libmedia/avformat/dist/esm/*"
      ],
      "@libmedia/avnetwork/*": [
        "node_modules/@libmedia/avnetwork/dist/esm/*"
      ],
      "@libmedia/avplayer/*": [
        "node_modules/@libmedia/avplayer/dist/esm/*"
      ],
      "@libmedia/avprotocol/*": [
        "node_modules/@libmedia/avprotocol/dist/esm/*"
      ],
      "@libmedia/avrender/*": [
        "node_modules/@libmedia/avrender/dist/esm/*"
      ],
      "@libmedia/audiostretchpitch/*": [
        "node_modules/@libmedia/audiostretchpitch/dist/esm/*"
      ],
      "@libmedia/audioresample/*": [
        "node_modules/@libmedia/audioresample/dist/esm/*"
      ],
      "@libmedia/avpipeline/*": [
        "node_modules/@libmedia/avpipeline/dist/esm/*"
      ],
      "@libmedia/avtranscode/*": [
        "node_modules/@libmedia/avtranscode/dist/esm/*"
      ],
      "@libmedia/avutil/*": [
        "node_modules/@libmedia/avutil/dist/esm/*"
      ],
      "@libmedia/videoscale/*": [
        "node_modules/@libmedia/videoscale/dist/esm/*"
      ],
      "@libmedia/avfilter/*": [
        "node_modules/@libmedia/avfilter/dist/esm/*"
      ]
    },
    "typeRoots": [
      "./src/types"
    ],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declarationDir": "./dist/types",
    "noEmit": true,
    "outDir": "./dist/types",
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true
  },

  "files": [
    "node_modules/@libmedia/cheap/dist/esm/cheapdef.d.ts"
  ],
  "include": [
    "package.json",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/**"
  ]
}
